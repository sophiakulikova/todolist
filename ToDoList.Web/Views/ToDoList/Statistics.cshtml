@model Dictionary<DateTime, List<ToDoList.BLL.ViewModels.TodoItemVM>>

@{
    ViewBag.Title = "Statistics";
}

<h2>Statistics</h2>

<div class="container">
    <div class="row">
        @foreach (var dateList in Model)
        {
            <div class="col-sm-4 mb-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@dateList.Key.ToShortDateString()</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var item in dateList.Value)
                        {
                            <li class="list-group-item">@item.Name</li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>


